bg  = #212121
bg2 = #343434
clr = #9E9E9E

center()
	display: flex
	flex-direction: column
	justify-content: center
	align-items: center

@font-face
	font-family: font
	src: url(../font.ttf)

html, body
	height: 100%
	margin: 0
	padding: 0
	background: bg
	font-family: font

main
	height: 100%
	width: 100%
	text-align: center
	center()

.back-rect
	width: 57vmin
	height: 57vmin
	color: clr
	background: bg2
	transform: rotate(45deg)
	center()

form
	transform: rotate(-45deg)

#loader-container
	position: absolute
	z-index: 9999
	left: 0
	top:  0
	width: 100%
	height: 100%
	margin: 0
	padding: 0
	opacity: 0
	transition: opacity 0.4s
	center()

#loader-container.show
	opacity: 1

#form-content
	opacity: 0
	transition: opacity 0.4s
	width: 100%
	height: 100%
	margin: 0
	padding: 0
	center()

#form-content.show
	opacity: 1

.status-up
	color: #66BB6A

.status-down
	color: #EF5350

.status-error
	color: #EF5350

.github
	position: absolute
	left: 0
	bottom: 0.7vmin
	width: 100%
	center()

.github-link
	text-decoration: none

.github-svg
	width: 5.4vmin
	height: 5.4vmin
	fill: bg2

.github-svg:hover
	fill: clr

.api
	position: absolute
	font-size: 5vmin
	left: 0
	top: 0.7vmin
	width: 100%
	center()

.api-link
	text-decoration: none
	color: bg2

.api-link:hover
	color: clr
